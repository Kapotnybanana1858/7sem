<Page x:Class="VokrugSveta.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VokrugSveta.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
                <TextBlock FontStyle="Italic" Background="White">Логин</TextBlock>
                <TextBox Name="LoginUs" TextChanged="LoginUs_TextChanged"></TextBox>
                <TextBlock Background="White">Пароль</TextBlock>
                <TextBox Name="TxbPassword" Width="370" Visibility="Collapsed"></TextBox>
                <PasswordBox Name="Password"></PasswordBox>
                <TextBlock Background="White"><Run Text="Повторите пароль"/></TextBlock>
                <PasswordBox x:Name="PasswordDop" />
                <TextBlock Text="Show Password" x:Name="TbxShowPass" MouseDown="TbxShowPass_MouseDown" MouseUp="TbxShowPass_MouseUp" Background="White"/>
                <Button Click="Login" Content="Зарегистрироваться" Background="White"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
